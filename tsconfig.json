{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es2016", "dom", "dom.iterable"],
    "module": "es6",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "removeComments": true,
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "dist"
  ]
}