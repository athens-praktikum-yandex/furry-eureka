{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "typeRoots": ["types/**/*.d.ts", "node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@libs/*": ["libs/*"],
      "@pages/*": ["pages/*"]
    },
  },
  "include": [
    "src",
    "types",
    "./node_modules/@types"
  ],
  "exclude": [
    "**/*.js"
  ]
}